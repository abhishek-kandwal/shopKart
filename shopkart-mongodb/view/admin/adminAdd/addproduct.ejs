<% if(!edit) { %>
<div class="noitem">add product here</div>
<div class="admin_form">
  <form action="/admin/newitem" method="POST">

    <label for="fname">product title:</label> <br>
    <input type="text" id="" name="product_title"> <br>

    <label for="fname">product name:</label> <br>
    <input type="text" id="" name="product_name"> <br>

    <label for="lname">product price:</label> <br>
    <input type="text" id="lname" name="product_price"> <br><br>

    <label for="lname">product description:</label> <br>
    <input type="text" id="lname" name="product_description"> <br><br>

    <input type="submit" value="add">
  </form>
  <% } else { %>
  <div class="noitem">update product here</div>
  <div class="admin_form">
    <form action="/admin/editupdate" method="POST">

      <label for="fname">product title:</label> <br>
      <input type="text" id="" name="product_title" value="<%= data[0].title %>"> <br>

      <label for="fname">product name:</label> <br>
      <input type="text" id="" name="product_name" value="<%= data[0].productname %>"> <br>

      <label for="lname">product price:</label> <br>
      <input type="text" id="lname" name="product_price" value="<%= data[0].price %>"> <br><br>

      <label for="lname">product description:</label> <br>
      <input type="text" id="lname" name="product_description" value="<%= data[0].description %>"> <br><br>

      <input type="hidden" id="lname" name="product_id" value="<%= data[0]._id %>"> <br><br>

      <input type="submit" value="update">
    </form>
    <% } %>
  </div>